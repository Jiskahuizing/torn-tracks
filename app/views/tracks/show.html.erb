<%= link_to("<< Back to List", tracks_path, :class => 'back-link') %>

<div class="tracks show">
  <h2>Show Track</h2>

  <table summary="Track detail view">
    <tr>
      <th>ID in base</th>
      <td><%= @track.id %></td>
    </tr>

    <tr>
      <th>Name</th>
      <td><%= @track.name %></td>
    </tr>

    <tr>
      <th>#</th>
      <td><%= @track.track_number %></td>
    </tr>

    <tr>
      <th>Version</th>
      <td><%= @track.track_version %></td>
    </tr>

    <tr>
      <th>Date</th>
      <td><%= @track.date_finished %></td>
    </tr>

    <tr>
      <th>Location</th>
      <td><%= @track.location_finished %></td>
    </tr>

    <tr>
      <th>Latitude</th>
      <td><%= @track.latitude %></td>
    </tr>

    <tr>
      <th>Longitude</th>
      <td><%= @track.longitude %></td>
    </tr>

    <tr>
      <th>Pitch</th>
      <td><%= @track.pitch %></td>
    </tr>

    <tr>
      <th>Length</th>
      <td><%= @track.length %></td>
    </tr>

    <tr>
      <th>Length_Sec</th>
      <td><%= @track.length_sec %></td>
    </tr>

    <tr>
      <th>Permalink</th>
      <td><%= @track.permalink %></td>
    </tr>

    <tr>
      <th>Visible</th>
      <td><%= @track.visible ? 'Yes' : 'No' %></td>
    </tr>

    <tr>
      <th>Attachment</th>
      <td><%= @track.sound %></td>
    </tr>

    <tr>
      <th>Image</th>
      <td><%= @track.image %></td>
    </tr>

    <tr>
      <th>Average Pitch</th>
      <td><%= @track.average_pitch %></td>
    </tr>

    <tr>
      <th>Average Length</th>
      <td><%= @track.average_length %></td>
    </tr>

    <tr>
      <th>Created</th>
      <td><%= @track.created_at %></td>
    </tr>

    <tr>
      <th>Updated</th>
      <td><%= @track.updated_at %></td>
    </tr>

  </table>
  <table class="listing" summary="Stop list"

    <tr class="header">
      <th>title</th>
      <th>Stop</th>
      <th>Time</th>
    </tr>

    <% @track.stops.each do |stop| %>
    <tr>
      <td><%= stop.stop_title %></td>
      <td><%= stop.stop_number %></td>
      <td><%= stop.stop_time %></td>
      <td><%= link_to("Delete", delete_stop_in_track_path(@track.id,stop.id)) %></td>
    </tr>
  <% end %>
  </table>
</div>
