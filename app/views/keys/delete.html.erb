<% @page_title = "Delete API-key" %>

<%= link_to("<< Back to List", keys_path, :class => 'back-link') %>

<div class="keys delete">
  <h2>Delete API-key</h2>

  <%= form_for(@key, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this API-key?</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete API-key") %>
    </div>

    <% end %>
  </div>
