<% @page_title = "Chronology" %>

<div class="container">
  <% @tracks.each_with_index do |track, i| %>

    <div data-card="<%= i %>" class="card">

      <div class="clickarea">
        <div class="clickarea-forward"></div>
        <div class="clickarea-back"></div>

        <div class="cardtitle">
        <span class="cardtitle--emph"><%= track.date_finished.strftime("%B %d")%></span>,
        <%= track.date_finished.strftime("%Y") %>
        </div>

        <% if track.image.exists? %>
          <img src="<%= track.image %>" style="width:100%;height:100%;">
        <% end %>

        <div class="cardtext">
          <span>
            <%= track.name %><%= track.track_number %> <%= track.track_version %>
          </span>
        </div>
        <div class="cardplayer">
          <% if track.sound.exists? %>
            <div id="audiochronolgy"><audio controls controlsList="nodownload" preload="metadata">
                <source src="<%= track.sound %>" type="audio/mpeg">
                Your browser does not support the audio element.
              </audio>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>


</div>
