<%= link_to("<< Back to List", tags_path, :class => 'back-link') %>

<div class="tags delete">
  <h2>Delete Tag</h2>

  <%= form_for(@tag, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this tag?</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Tag") %>
    </div>

    <% end %>
  </div>
