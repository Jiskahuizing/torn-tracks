<% @page_title = "A Field Guide to Torn Tracks" %>

<div class="tracks contentnames">

  <p>&nbsp;</p>

  <h2>Index</h2>
  <p>&nbsp;</p>
  <table class="listing" summary="Track list"

    <tr class="header">
      <th>Tracks</th>
      <th> </th>
      <th> </th>
    </tr>
    <% @tracks.each do |track| %>

    <tr>
      <td><%= track.name %><%= track.track_number %></td>
      <td>&nbsp; &nbsp;</td>
      <td><%= link_to "Show", name_path(track) %></td>
    </tr>
  <% end %>
  </table>
</div>
